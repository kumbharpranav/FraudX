<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="#40FFFFFF"
                android:endColor="#00000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Shiny Black Background Gradient -->
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="#FF000000"
                android:centerColor="#FF111111"
                android:endColor="#FF050505"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- White Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <stroke android:width="2dp"
                android:color="#BFFFFFFF" />
            <padding android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp" />
        </shape>
    </item>

    <!-- Highlight Effect for Shiny Appearance -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#30FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Top Edge Highlight for Shiny Appearance -->
    <item android:top="1dp" android:bottom="24dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF" />
            <corners 
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp" />
        </shape>
    </item>
</layer-list>
