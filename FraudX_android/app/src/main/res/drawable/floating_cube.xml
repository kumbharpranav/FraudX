<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Front face -->
    <item>
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#401976D2"/>
                <size android:width="40dp" android:height="40dp"/>
            </shape>
        </rotate>
    </item>
    <!-- Top face highlight -->
    <item android:top="2dp" android:right="20dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#402196F3"/>
                <size android:width="40dp" android:height="20dp"/>
            </shape>
        </rotate>
    </item>
    <!-- Side face shadow -->
    <item android:left="20dp" android:top="2dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#401565C0"/>
                <size android:width="20dp" android:height="40dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
