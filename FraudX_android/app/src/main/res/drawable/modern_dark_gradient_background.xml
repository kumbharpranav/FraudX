<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#000000"
                android:centerColor="#101010"
                android:endColor="#202020" />
        </shape>
    </item>

    <!-- Stylish 3D elements -->
    <item android:top="50dp" android:right="350dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#30323f"
                android:endColor="#202030" />
            <corners android:radius="16dp" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>

    <item android:top="250dp" android:left="250dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="225"
                android:startColor="#252535"
                android:endColor="#151525" />
            <corners android:radius="12dp" />
            <size android:width="150dp" android:height="150dp" />
        </shape>
    </item>

    <item android:bottom="200dp" android:left="100dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#303040"
                android:endColor="#202030" />
            <corners android:radius="14dp" />
            <size android:width="120dp" android:height="120dp" />
        </shape>
    </item>

    <!-- Subtle overlay for depth effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:startColor="#00000000"
                android:endColor="#50000000"
                android:centerX="0.5"
                android:centerY="0.3" />
        </shape>
    </item>
</layer-list> 